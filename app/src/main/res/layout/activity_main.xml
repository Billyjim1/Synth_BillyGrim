<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.insufficientlight.synth_billy.MainActivity">

    <Button
        android:id="@+id/challenge1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/challenge1Button" />

    <Button
        android:id="@+id/challenge3Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/challenge1Button"
        android:text="Challenge 3" />

    <Button
        android:id="@+id/challenge5Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/challenge3Button"
        android:text="Challenge 5" />

    <Button
        android:id="@+id/challenge7Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/challenge5Button"
        android:text="Challenge 7" />
    <Button
        android:id="@+id/challenge8Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/challenge7Button"
        android:text="Challenge 8" />
    <Button
        android:id="@+id/challenge9Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/challenge8Button"
        android:text="Challenge 9" />
    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Select a number..."
        android:layout_below="@+id/challenge9Button"
        />
    <NumberPicker
        android:id="@+id/np"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv"
        />


    /*android:layout_below="@+id/howdy"
    android:layout_alignStart="@+id/challenge5Button"*/

</RelativeLayout>